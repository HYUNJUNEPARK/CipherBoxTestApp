<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        tools:context=".app.MainActivity">

        <ImageView
            android:id="@+id/keyGenButton"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:onClick="keyGenButtonClicked"
            android:src="@drawable/ic_baseline_key_24"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/keyGenText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="KeyGen"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@id/keyGenButton"
            app:layout_constraintStart_toStartOf="@id/keyGenButton"
            app:layout_constraintTop_toBottomOf="@id/keyGenButton" />

        <LinearLayout
            android:id="@+id/KeyPairLayout"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:padding="8dp"
            app:layout_constraintBottom_toBottomOf="@id/keyGenText"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/keyGenButton"
            app:layout_constraintTop_toTopOf="@id/keyGenButton">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ECKeyPair"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/ecKeyPairStateImageView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/ic_baseline_cancel_24" />

                <ImageView
                    android:id="@+id/ecKeyPairDeleteImageView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:clickable="true"
                    android:onClick="ecKeyPairDeleteButtonClicked"
                    android:src="@drawable/ic_baseline_delete_forever_24" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Random : "
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/randomTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                tools:text="ASDF#$@#AASDDFAFADFDSSDFCDDDS" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/sharedKeyGenLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/keyGenText">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/sharedSecretKeyGenImageView"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:clickable="true"
                    android:onClick="sharedSecretKeyGenButtonClicked"
                    android:src="@drawable/ic_baseline_key_24" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Shared \nSecret Key\n Gen"
                    android:textColor="@color/black"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/sharedKeyGenLayout"
            app:layout_constraintTop_toTopOf="@id/sharedKeyGenLayout">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Key Alias : "
                android:textSize="12sp" />

            <TextView
                android:id="@+id/sharedSecretKeyAliasTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                tools:text="ASDF#$@#AASDDFAFADFDSSDFCDDDS" />
        </LinearLayout>

        <ImageView
            android:id="@+id/sharedSecretKeyDeleteImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginLeft="10dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:onClick="sharedSecretKeyDeleteButtonClicked"
            android:src="@drawable/ic_baseline_delete_forever_24"
            app:layout_constraintBottom_toBottomOf="@id/sharedKeyGenLayout"
            app:layout_constraintEnd_toEndOf="parent" />

        <LinearLayout
            android:id="@+id/userInputLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/sharedKeyGenLayout">

            <EditText
                android:id="@+id/messageEditText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:ellipsize="end"
                android:hint="Input your message"
                android:maxLines="1"
                android:textSize="14sp" />

            <Button
                android:id="@+id/messageSendButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:minWidth="0dp"
                android:minHeight="0dp"
                android:onClick="messageSendButtonClicked"
                android:text="send"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/resultLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/userInputLayout">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="원본 메시지 :  "
                android:textColor="@color/black"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/userMessageTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Origin message" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="7dp"
                android:layout_marginBottom="7dp"
                android:background="#989393" />
            <!--        -->

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="암호화 메시지 [CBC]  :  "
                android:textColor="@color/black"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/encryptionCBCTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Encryption message" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="7dp"
                android:layout_marginBottom="7dp"
                android:background="#989393" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="복호화 메시지 [CBC] :  "
                android:textColor="@color/black"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/decryptionCBCTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Decryption message" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="7dp"
                android:layout_marginBottom="7dp"
                android:background="#989393" />

            <Button
                android:onClick="testButtonClicked"
                android:text="isKey?"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <Button
                android:onClick="getAllKeyIds"
                android:text="get All Keys"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
