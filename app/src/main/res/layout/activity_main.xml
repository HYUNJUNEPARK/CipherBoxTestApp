<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    tools:context=".app.MainActivity">

    <ImageView
        android:id="@+id/keyGenButton"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:clickable="true"
        android:onClick="keyGenButtonClicked"
        android:src="@drawable/ic_baseline_key_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/keyGenText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="KeyGen"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@id/keyGenButton"
        app:layout_constraintStart_toStartOf="@id/keyGenButton"
        app:layout_constraintTop_toBottomOf="@id/keyGenButton" />

    <LinearLayout
        android:id="@+id/KeyPairLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp"
        app:layout_constraintBottom_toBottomOf="@id/keyGenText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/keyGenButton"
        app:layout_constraintTop_toTopOf="@id/keyGenButton">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_baseline_person_24"
                android:textColor="@color/black"
                app:tint="@color/purple_500" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:src="@drawable/ic_baseline_key_24"
                android:textColor="@color/black"
                android:textStyle="bold"
                app:tint="@color/purple_700" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:src="@drawable/ic_baseline_key_off_24"
                android:textColor="@color/black"
                android:textStyle="bold"
                app:tint="@color/purple_700" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:text="SDK  "
                android:textColor="@color/purple_700"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/sdkUserKeyStateImageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:src="@drawable/ic_baseline_cancel_24" />

            <ImageView
                android:id="@+id/sdkKeyDeleteImageView"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:onClick="sdkKeyDeleteButtonClicked"
                android:src="@drawable/ic_baseline_delete_forever_24" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Random Number"
                android:layout_gravity="center"
                android:textColor="@color/purple_700"
                android:textStyle="bold" />
            <ImageView
                android:id="@+id/RandomNumberStateImageView"
                android:layout_width="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_baseline_cancel_24" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_baseline_person_24"
                android:textColor="@color/black"
                app:tint="@color/blue" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:src="@drawable/ic_baseline_key_24"
                android:textColor="@color/black"
                android:textStyle="bold"
                app:tint="@color/blue" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:src="@drawable/ic_baseline_key_off_24"
                android:textColor="@color/black"
                android:textStyle="bold"
                app:tint="@color/blue" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:text="TEST"
                android:textColor="@color/blue"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/testUserKeyStateImageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:src="@drawable/ic_baseline_cancel_24" />

            <ImageView
                android:id="@+id/testKeyDeleteImageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:onClick="testKeyDeleteButtonClicked"
                android:src="@drawable/ic_baseline_delete_forever_24" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/sharedKeyLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/keyGenText">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/sharedSecretKeyGenImageView"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:onClick="sharedSecretKeyGenButtonClicked"
                android:src="@drawable/ic_baseline_key_24" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Shared \nSecret Key\n Gen"
                android:textStyle="bold" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="="
            android:textSize="30sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_baseline_key_24"
                app:tint="@color/blue" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Public Key"
                android:textColor="@color/blue"
                android:textStyle="bold" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+"
            android:textSize="30sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_baseline_key_off_24"
                app:tint="@color/purple_700" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Private Key"
                android:textColor="@color/purple_700"
                android:textStyle="bold" />
        </LinearLayout>

        <ImageView
            android:id="@+id/sharedSecretKeyStateImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:src="@drawable/ic_baseline_cancel_24" />

        <ImageView
            android:id="@+id/sharedSecretKeyDeleteImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:onClick="sharedSecretKeyDeleteButtonClicked"
            android:src="@drawable/ic_baseline_delete_forever_24" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/userInputLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/sharedKeyLayout">

        <EditText
            android:id="@+id/messageEditText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:ellipsize="end"
            android:hint="Input your message"
            android:maxLines="1"
            android:textSize="14sp" />

        <Button
            android:id="@+id/messageSendButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:minWidth="0dp"
            android:minHeight="0dp"
            android:onClick="messageSendButtonClicked"
            android:text="send"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/resultLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/userInputLayout">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="원본 메시지 :  "
            android:textColor="@color/black"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/userMessageTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Origin message" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="7dp"
            android:layout_marginBottom="7dp"
            android:background="#989393" />
        <!--        -->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="암호화 메시지 [CBC]  :  "
            android:textColor="@color/black"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/encryptionCBCTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Encryption message" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="7dp"
            android:layout_marginBottom="7dp"
            android:background="#989393" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="복호화 메시지 [CBC] :  "
            android:textColor="@color/black"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/decryptionCBCTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Decryption message" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="7dp"
            android:layout_marginBottom="7dp"
            android:background="#989393" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
